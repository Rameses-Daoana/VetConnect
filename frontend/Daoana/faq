import React, { useState } from "react";
import "./faq.css";

function Faq() {
  const [search, setSearch] = useState("");

  const faqs = [
    {
      question: "How do I book an appointment?",
      answer:
        "Simply go to our Appointment page, choose your preferred date and time, and confirm booking.",
    },
    {
      question: "Do I need an account to book?",
      answer:
        "Yes, creating a free account helps you manage and track your appointments easily.",
    },
    {
      question: "Can I reschedule or cancel an appointment?",
      answer:
        "Yes, you can log in to your dashboard and update your booking anytime.",
    },
    {
      question: "What services does VetConnect offer?",
      answer:
        "VetConnect supports general consultations, vaccinations, check-ups, and more.",
    },
  ];

  const filteredFaqs = faqs.filter(
    (faq) =>
      faq.question.toLowerCase().includes(search.toLowerCase()) ||
      faq.answer.toLowerCase().includes(search.toLowerCase())
  );

  return (
    <div className="faq-page">
      {/* Header */}
      <header>
        <div className="nav-container">
          <div className="logo">
            <img src="assets/images/logo.jpg" alt="VetConnect Logo" />
            <h2>VetConnect</h2>
          </div>
          <nav>
            <a href="/" className="">Home</a>
            <a href="/faq" className="active">FAQ</a>
            <a href="/booking">Book Appointment</a>
          </nav>
          <div className="buttons">
            <button onClick={() => (window.location.href = "/login")}>
              Sign in
            </button>
            <button
              onClick={() => (window.location.href = "/signup")}
              className="register"
            >
              Register
            </button>
          </div>
        </div>
      </header>

      {/* FAQ Header Section */}
      <section className="faq-header">
        <div className="faq-content">
          <h1>Frequently Asked Questions</h1>
          <p>
            Find answers to common questions about our services, appointments,
            and how VetConnect works. If you don’t see what you’re looking for,
            feel free to reach out to us directly.
          </p>
          <input
            type="text"
            id="faqSearch"
            placeholder="Search FAQs"
            value={search}
            onChange={(e) => setSearch(e.target.value)}
          />
        </div>
      </section>

      {/* FAQ Section */}
      <section className="faq-section">
        <div className="faq-grid">
          {filteredFaqs.length > 0 ? (
            filteredFaqs.map((faq, index) => (
              <div key={index} className="faq-box">
                <h3>Q. {faq.question}</h3>
                <p>A. {faq.answer}</p>
              </div>
            ))
          ) : (
            <p className="no-results">No FAQs match your search.</p>
          )}
        </div>
      </section>

      {/* Footer */}
      <footer>
        <div className="footer-container">
          <div className="footer-left">
            <img
              src="assets/images/footer-logo.png"
              alt="VetConnect Logo"
            />
            <div className="social-icons">
              <a href="#">
                <img
                  src="https://img.icons8.com/ios-filled/24/ffffff/x.png
"
                  alt="X"
                />
              </a>
              <a href="#">
                <img
                  src="https://img.icons8.com/ios-filled/24/ffffff/instagram-new.png
"
                  alt="Instagram"
                />
              </a>
              <a href="#">
                <img
                  src="https://img.icons8.com/ios-filled/24/ffffff/youtube-play.png
"
                  alt="YouTube"
                />
              </a>
              <a href="#">
                <img
                  src="https://img.icons8.com/ios-filled/24/ffffff/linkedin.png
"
                  alt="LinkedIn"
                />
              </a>
            </div>
          </div>
          <div className="footer-right">
            <h4>Contact Info</h4>
            <p>Address: Arellano Street, Dagupan City, Pangasinan</p>
            <p>Phone: (000) 123-4567</p>
            <p>Email: support@vetconnect.com</p>
          </div>
        </div>
      </footer>
    </div>
  );
}

export default Faq;
